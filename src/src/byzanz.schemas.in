<gconfschemafile>
    <schemalist>    

      <schema>
        <key>/schemas/apps/byzanz-applet/prefs/save_filename</key>
        <owner>byzanz-applet</owner>
        <type>string</type>
        <default></default>
        <locale name="C">
          <short>Save filename</short>
          <long>URI for the filename Byzanz will suggest when starting a recording.</long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/byzanz-applet/prefs/method</key>
	<owner>byzanz-applet</owner>
	<type>string</type>
        <default>screen</default>
	<locale name="C">
	  <short>Recording method</short>
	  <long>Use this method as the default method for recording. Must be one of "screen" for recording the whole screen, "area" for selecting an area or "window" to select a window.</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/byzanz-applet/prefs/record_audio</key>
	<owner>byzanz-applet</owner>
	<type>bool</type>
        <default>FALSE</default>
	<locale name="C">
	  <short>Record audio</short>
	  <long>If set, Byzanz will record audio from the default audio device if the format supports it. This allows narrating along with the recording.</long>
	</locale>
      </schema>

  </schemalist>
</gconfschemafile>
